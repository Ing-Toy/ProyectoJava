<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" stylesheets="@../style/PlaceBetsScreenStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.PlaceBetsScreenController">
   <children>
      <Label fx:id="lblPrincipal" prefHeight="18.0" prefWidth="166.0" text="Place your bets!" textAlignment="CENTER" />
      <TextField fx:id="txtFieldApuesta" maxWidth="-Infinity" prefWidth="50.0" promptText="Modify bet here" />
      <HBox fx:id="hboxApuestas" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnFicha1" mnemonicParsing="false" onAction="#sumarficha1" text="1" />
            <Button fx:id="btnFicha10" mnemonicParsing="false" onAction="#sumarficha10" text="10" />
            <Button fx:id="btnFicha25" mnemonicParsing="false" onAction="#sumarficha25" text="25" />
            <Button fx:id="btnFicha50" mnemonicParsing="false" onAction="#sumarficha50" text="50" />
            <Button fx:id="btnFicha100" mnemonicParsing="false" onAction="#sumarficha100" text="100" />
         </children>
      </HBox>
      <Label fx:id="moneyleft" />
      <HBox fx:id="hboxMenu" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#backtomenu" text="Back" />
            <Button fx:id="btnStartGame" mnemonicParsing="false" onAction="#onGO" text="Go!" textAlignment="CENTER" />
         </children>
      </HBox>
      <Label fx:id="lblComputers" text="Computers:" />
      <HBox fx:id="hboxComputers" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnComp0" mnemonicParsing="false" onAction="#comp0" text="0" />
            <Button fx:id="btnComp1" mnemonicParsing="false" onAction="#comp1" text="1" />
            <Button fx:id="btnComp2" mnemonicParsing="false" onAction="#comp2" text="2" />
            <Button fx:id="btnComp3" mnemonicParsing="false" onAction="#comp3" text="3" />
         </children>
      </HBox>
   </children>
</VBox>
