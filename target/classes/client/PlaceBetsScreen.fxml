<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.PlaceBetsScreenController">
   <children>
      <VBox layoutX="218.0" layoutY="24.0" prefHeight="362.0" prefWidth="164.0">
         <children>
            <Label fx:id="principal" prefHeight="18.0" prefWidth="166.0" text="Place your bets!" textAlignment="CENTER" />
            <TextField fx:id="apuesta" promptText="Modify bet here..." />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="ficha1" mnemonicParsing="false" onAction="#sumarficha1" text="1" />
                  <Button fx:id="ficha10" mnemonicParsing="false" onAction="#sumarficha10" text="10" />
                  <Button fx:id="ficha25" mnemonicParsing="false" onAction="#sumarficha25" text="25" />
                  <Button fx:id="ficha50" mnemonicParsing="false" onAction="#sumarficha50" text="50" />
                  <Button fx:id="ficha100" mnemonicParsing="false" onAction="#sumarficha100" text="100" />
               </children>
            </HBox>
            <Label fx:id="moneyleft" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="Back" mnemonicParsing="false" onAction="#backtomenu" text="Back" />
                  <Button fx:id="startgame" mnemonicParsing="false" onAction="#onGO" text="Go!" textAlignment="CENTER" />
               </children>
            </HBox>
            <Label text="Computers:" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="comp0" mnemonicParsing="false" onAction="#comp0" text="0" />
                  <Button fx:id="comp1" mnemonicParsing="false" onAction="#comp1" text="1" />
                  <Button fx:id="comp2" mnemonicParsing="false" onAction="#comp2" text="2" />
                  <Button fx:id="comp3" mnemonicParsing="false" onAction="#comp3" text="3" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
